<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ACalc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACalc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ACalc">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid" Loaded="MainGrid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Grid.Column="0" Grid.Row="0">
            <Image Source="/Assets/Square44x44Logo.png" Width="20" HorizontalAlignment="Left" Margin="10,10,10,0"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" Margin="10,10,10,10" CornerRadius="10" Background="#22000000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="DisplayGrid" Grid.Column="0" Grid.Row="0" Background="#AA000000">
                <ListView x:Name="Display_ListView" Loaded="Display_ListView_Loaded" SelectionMode="None"  Padding="0,10" >
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Subjects">
                            <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                    <Run Text="Classes Attended: " />
                                                    <Run Text="{x:Bind ClassesAttended}" />
                                                    <Run Text="/" />
                                                    <Run Text="{x:Bind ClassesConducted}" />
                                            </TextBlock>
                                        </ToolTipService.ToolTip>

                                        <TextBlock Grid.Column="0" Text="{x:Bind SubjectName}" VerticalAlignment="Center"/>
                                        <ProgressBar Grid.Column="1" Value="{x:Bind CurrentPercentage}" />
                                    </Grid>
                                </Expander.Header>
                                <Expander.Content>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Current Percentage: " Margin="10,10,10,10" HorizontalAlignment="Left" />
                                        <TextBlock Grid.Column="1" Grid.Row="0" Margin="10,10,10,10" >
                                            <Run Text="{x:Bind CurrentPercentage}" />
                                            <Run Text="%" />
                                        </TextBlock>

                                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Required Percentage: " Margin="10,10,10,10" HorizontalAlignment="Left" />
                                        <TextBlock Grid.Column="1" Grid.Row="1" Margin="10,10,10,10" >
                                            <Run Text="{x:Bind RequiredPercentage}" />
                                            <Run Text="%" />
                                        </TextBlock>

                                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Classes Needed: " Margin="10,10,10,10" HorizontalAlignment="Left" />
                                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind ClassesNeeded}" Margin="10,10,10,10" />
                                    </Grid>
                                </Expander.Content>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.Row="0" Background="#44000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Name="EditDesiredPercentage" Text="Edit" Click="EditDesiredPercentage_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE70F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        
                        <TextBlock Grid.Column="0" Text="Desired Percentage" VerticalAlignment="Center" Margin="10,10,10,10"/>
                        <TextBlock Grid.Column="1" x:Name="DesiredPercent_TextBlock" Text="85.0" VerticalAlignment="Center" Margin="0,10,10,10"/>
                    </Grid>

                    <Button x:Name="AddNewSubButton" HorizontalAlignment="Right" Height="32" Width="32" Grid.Column="2" Grid.Row="0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="10,10,10,10" Click="AddNewSubButton_Click">
                        <Button.Content>
                            <FontIcon Glyph="&#xE710;" FontSize="10"/>
                        </Button.Content>
                    </Button>
                </Grid>

                <Grid x:Name="SubjectListGrid" Grid.Column="0" Grid.Row="1">
                    <ListView x:Name="Subjects_ListView" Loaded="Subjects_ListView_Loaded" ShowsScrollingPlaceholders="True" CanDragItems="True" CanReorderItems="True" AllowDrop="True" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Subjects">
                                <Grid Padding="5,5,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem  x:Name="EditMenuFlyoutItem" Text="Edit" Click="EditMenuFlyoutItem_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE70F;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem x:Name="DeleteMenuFlyoutItem" Text="Delete" Click="DeleteMenuFlyoutItem_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE74D;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>

                                    <TextBlock Grid.Column="0" Text="{x:Bind SubjectName}" Margin="10,10,10,10" VerticalAlignment="Center"/>
                                    <AppBarSeparator Grid.Column="1" />
                                    <TextBlock Grid.Column="2" Text="{x:Bind ClassesAttended}" Margin="10,10,10,10"/>
                                    <AppBarSeparator Grid.Column="3" />
                                    <TextBlock Grid.Column="4" Text="{x:Bind ClassesConducted}" Margin="10,10,10,10" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
